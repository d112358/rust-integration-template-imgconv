{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: imgconv-py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/imgconv-py/test.py",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args": [
                "data/pug_57.jpg",
                "data/pug_57_converted_py.png"
            ]
        },
        {
            "name": "Debug: imgconv-ffi",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/imgconv-ffi/test.py",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args": [
                "data/pug_57.jpg",
                "data/pug_57_converted_ffi.png"
            ]
        },
        {
            "name": "Debug: imgconv-cli",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/imgconv-cli.exe",
            "args": [
                "data/pug_57.jpg",
                "data/pug_57_converted_cli.png"
            ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Release: imgconv-cli",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/release/imgconv-cli.exe",
            "args": [
                "${input:needle_arg}",
                "${input:haystack_arg}"
            ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}