    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: imgconv-py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/imgconv-py/test.py",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args": [
                "data/pug.jpg",
                "data/pug_converted_py.png"
            ],
            "preLaunchTask": "Dev build: imgconv-py"
        },
        {
            "name": "Debug: imgconv-ffi",
